{
	"compilerOptions": {
		"baseUrl": ".",
		"target": "esnext",
		"useDefineForClassFields": true,
		"allowSyntheticDefaultImports": true,
		"composite": true,
		"module": "esnext",
		"moduleResolution": "node",
		"strict": true,
		"jsx": "preserve",
		"sourceMap": false,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"lib": ["esnext", "dom"],
		"types": [
			"vite/client", 
			"node", 
			"vuetify"
		],
		"paths": {
			"@/*": ["./*"]
		},
	},
	"include": [
		"./**/*.ts", 
		"./**/*.d.ts", 
		"./**/*.tsx", 
		"./**/*.vue",
		"../vite.config.ts"
	],
}

